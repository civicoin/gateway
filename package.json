{
	"name": "gateway",
	"main": "app.js",
	"version": "1.0.0",
	"description": "The main service of Civicoin",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "tsx watch src/app.ts",
		"build": "tsc",
		"start": "node dist/app.js",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
		"clean": "rm -rf dist/",
		"prebuild": "npm run clean",
		"proto:clear": "rm -rf src/generated && mkdir src/generated",
		"proto:generate": "npm run proto:clear && grpc_tools_node_protoc --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --ts_out=grpc_js:./src/generated -I ./node_modules/civi/protos/ ./node_modules/civi/protos/*.proto"
  },
	"type": "module",
	"repository": "https://github.com/civicoin/gateway.git",
	"author": "Civicoin",
	"license": "ISC",
	"devDependencies": {
		"@types/amqplib": "0.10.4",
		"@types/bcrypt": "5.0.2",
		"@types/node": "20.10.6",
		"@types/pino": "7.0.5",
		"@typescript-eslint/eslint-plugin": "6.17.0",
		"@typescript-eslint/parser": "6.17.0",
		"civi": "git://github.com/civicoin/civi.git",
		"grpc_tools_node_protoc_ts": "5.3.3",
		"grpc-tools": "1.12.4",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-perfectionist": "2.5.0",
		"eslint-plugin-prettier": "5.1.2",
		"pino-pretty": "10.3.1",
		"prettier": "3.1.1",
		"prisma": "5.14.0",
		"tsx": "4.7.0",
		"typescript": "5.3.3"
	},
	"dependencies": {
		"@fastify/cors": "8.5.0",
		"@fastify/jwt": "7.2.4",
		"@fastify/swagger": "8.14.0",
		"@fastify/swagger-ui": "2.1.0",
		"@grpc/grpc-js": "1.11.1",
		"@grpc/proto-loader": "0.7.13",
		"@noble/secp256k1": "^2.1.0",
		"@prisma/client": "5.7.1",
		"amqplib": "0.10.3",
		"bcrypt": "5.1.1",
		"chalk": "5.3.0",
		"dotenv": "16.3.1",
		"fastify": "4.25.2",
		"fastify-plugin": "4.5.1",
		"fastify-zod": "1.4.0",
		"zod": "3.23.8"
	},
	"engines": {
		"node": "22"
	}
}
